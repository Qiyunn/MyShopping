<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/normal_cart_image_view"
        android:layout_width="@dimen/product_small_size"
        android:layout_height="@dimen/product_small_size"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/normal_cart_text_name"
        android:layout_toRightOf="@+id/normal_cart_image_view"
        android:layout_marginLeft="@dimen/margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_22"
        android:text="name"/>
    <TextView
        android:id="@+id/normal_cart_text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/normal_cart_image_view"
        android:layout_alignParentRight="true"
        android:text="price"
        android:textSize="@dimen/text_size_20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/normal_cart_image_view"
        android:layout_toRightOf="@+id/normal_cart_image_view"
        android:layout_marginLeft="@dimen/margin_top">
        <Button
            android:id="@+id/normal_cart_button_minus"
            android:layout_width="@dimen/icon_button_20"
            android:layout_height="20dp"
            android:background="@drawable/ic_remove_circle_outline_black_24dp"/>
        <TextView
            android:id="@+id/normal_cart_text_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginHorizontal="@dimen/margin_5"/>
        <Button
            android:id="@+id/normal_cart_button_add"
            android:layout_width="@dimen/icon_button_20"
            android:layout_height="20dp"
            android:background="@drawable/ic_add_circle_outline_black_24dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/normal_cart_button_delete"
        android:layout_below="@id/normal_cart_text_price"
        android:layout_alignParentRight="true"
        android:layout_height="30dp"
        android:background="@drawable/button_stroke_nopad_background"
        android:layout_width="70dp"
        android:textColor="@color/colorButton"
        android:text="Delete"
        android:layout_marginTop="2dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorButton"
        android:layout_below="@id/normal_cart_button_delete"
        android:layout_marginVertical="5dp"/>

</RelativeLayout>